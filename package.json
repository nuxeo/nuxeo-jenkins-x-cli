{
  "name": "nuxeo-jenkins-x-cli",
  "version": "1.0.0",
  "description": "Nuxeo Jenkins X CLI",
  "main": "lib/index.js",
  "bin": {
    "njx": "lib/index.js"
  },
  "scripts": {
    "test": "npm run lint && nyc mocha",
    "start": "ts-node src/index.ts",
    "prebuild": "rimraf lib",
    "build": "tsc -p .",
    "postbuild": "cpr src/presets lib/presets",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "lint": "tslint -c tslint.json --project .",
    "tsc": "tsc"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*.ts"
    ],
    "all": true
  },
  "keywords": [
    "nuxeo",
    "jenkins-x",
    "cli"
  ],
  "author": "Nuxeo",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/yargs": "^12.0.8",
    "chai": "^4.2.0",
    "cpr": "^3.0.1",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.3",
    "source-map-support": "^0.5.10",
    "ts-node": "^8.0.1",
    "tslint": "^5.12.1",
    "tslint-microsoft-contrib": "^6.0.0",
    "typescript": "^3.2.4"
  },
  "dependencies": {
    "@types/async": "^2.4.0",
    "@types/debug": "0.0.31",
    "@types/js-yaml": "^3.12.0",
    "@types/ora": "^3.0.0",
    "@types/tmp": "0.0.33",
    "async": "^2.6.1",
    "debug": "^4.1.1",
    "js-yaml": "^3.12.1",
    "ora": "^3.0.0",
    "tmp": "0.0.33",
    "yargs": "^13.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint --fix",
      "pre-push": "yarn test"
    }
  }
}
